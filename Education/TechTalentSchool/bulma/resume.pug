doctype html
head
	meta( name="viewport" content="width=device-width, initial-scale=1")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css")
	link(href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet")
	script(defer src="https://use.fontawesome.com/releases/v5.1.0/js/all.js")
	style.
		* { font-family: 'Poppins', sans-serif; }
		.intro {
			height: 100vh;
		}
		.intro-text {
			display: flex;
			justify-content: center;
			align-items: center;
			flex-direction: column;
		}
		.intro h1 {
			font-size: 5em;
			font-weight: 800;
		}
		.intro h2 {
			font-size: 4.5em;
			font-weight: 200;
		}
		.has-portrait { 
			background: url('img/tanja-heffner-431533-unsplash.jpg');
			background-size: cover;
			height: 100vh;
		}
		.socials span { margin-top: 10px; margin-right: 10px; }
		.resume-entry {
			background: url('img/rsz_georgie-cobbs-467923-unsplash.jpg');
			background-size: contain;
			background-repeat: no-repeat;
			background-color: #ffd547;
			height: 100vh;
		}
		.about-me {
			padding: 50px 150px 50px 50px;
			margin-top: 100px;
		}
		progress.progress { margin-bottom: 10px !important; }
		.skill { margin-bottom: 20px; }
		.jobs { padding: 100px; }
		.divider {
			padding: 0;
			margin-top: -20px;
		}
		.divider p {
			height: 100px;
			border-left: 2px solid #bbb;
			transform: translateX(50%);
		}
		.languages {
			padding: 100px;
		}
		.languages h3 {
			margin-bottom: 100px !important;
		}
		.languages li {
			font-size: 1.5em;
			margin: 20px;
		}
		.clients {
			padding: 50px 100px;
		}
		.clients h3 {
			margin-bottom: 50px !important;
		}
		.clients img {
			filter: grayscale(100%);
			transition: all 500ms ease;
		}
		.clients img:hover {
			filter: grayscale(0%);
		}
		.contact {
			height: 100vh;
			padding: 100px;
		}
		.contact h3 {
			margin-bottom: 50px !important;
		}
		.testimonials {
			height: 100vh;
			padding: 50px 150px;
		}
		.footer {
			padding: 25px;
		}

body

// INTRO
section.intro
	.columns.is-marginless
		.column.has-portrait
		.column.has-background-black.has-text-white.has-text-centered.intro-text
			div.has-text-left
				h1.title.has-text-white Roberta
				h2.subtitle.has-text-white Rodriguez
				p.is-size-5 
					| Experienced 
					strong.has-text-white Web Developer 
				br
				p.socials
					span.fa-stack
						i.fas.fa-circle.fa-stack-2x(style={ "color" : "#3b5998" })
						i.fab.fa-facebook-f.fa-stack-1x.fa-inverse
					span.fa-stack
						i.fas.fa-circle.fa-stack-2x(style={ "color" : "#1da1f2" })
						i.fab.fa-twitter.fa-stack-1x.fa-inverse
					span.fa-stack
						i.fas.fa-circle.fa-stack-2x(style={ "color" : "0077b5" })
						i.fab.fa-linkedin.fa-stack-1x.fa-inverse

// ENTRY
section.resume-entry
	.columns
		.column 
		.column.about-me.is-half 
			h3.title About me
			<p class="is-size-4 has-text-weight-normal">I am an experienced <strong>Web Developer</strong><br/> from Greece.</p>

			br
			h3.is-size-5.has-text-weight-bold(style={ "margin-bottom" : "30px" }) Skills and abilities

			progress.progress.is-small.has-background-gray(value="95" max="100")
			p.has-text-weight-bold.skill Web Design [95%]

			progress.progress.is-small.has-background-gray(value="80" max="100")
			p.has-text-weight-bold.skill Print Design [80%]

			progress.progress.is-small.has-background-gray(value="85" max="100")
			p.has-text-weight-bold.skill Corporate Identity [85%]

			progress.progress.is-small.has-background-gray(value="75" max="100")
			p.has-text-weight-bold.skill Social Media [75%]

			progress.progress.is-small.has-background-gray(value="55" max="100")
			p.has-text-weight-bold.skill Psychology [55%]

